<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wish_photo_album_item_shape"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.dqc.puppymoney.ui.view.CustomFontTextView
        android:id="@+id/wish_photo_album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textColor="@color/wish_time_year_text_color"/>

    <com.dqc.puppymoney.ui.view.PhotoAlbumPreviewListLayout
        android:id="@+id/wish_photo_album_preview_list"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/wish_photo_album_title"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:orientation="horizontal"
        android:transitionName="share">

    </com.dqc.puppymoney.ui.view.PhotoAlbumPreviewListLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wish_photo_album_preview_list"
        android:layout_alignParentRight="true"
        android:baselineAlignBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/photo_more_ic" />



</RelativeLayout>